# =============================================================================
# CONFERENCE REGISTRATION PACKAGE - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NEXT_PUBLIC_APP_NAME="Your Conference Name"
NEXT_PUBLIC_APP_URL="https://your-domain.com"
NEXT_PUBLIC_CONTACT_EMAIL="contact@your-domain.com"

# =============================================================================
# PAYPAL CONFIGURATION (PRODUCTION)
# =============================================================================
# Get these from: https://developer.paypal.com/developer/applications/
NEXT_PUBLIC_PAYPAL_CLIENT_ID="YOUR_PAYPAL_CLIENT_ID_HERE"
PAYPAL_CLIENT_SECRET="YOUR_PAYPAL_CLIENT_SECRET_HERE"

# PayPal Environment (sandbox or live)
NEXT_PUBLIC_PAYPAL_ENVIRONMENT="live"

# PayPal Webhook ID (for webhook verification)
PAYPAL_WEBHOOK_ID="YOUR_PAYPAL_WEBHOOK_ID_HERE"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Replace with your database connection string
DATABASE_URL="postgresql://username:password@localhost:5432/conference_db"

# Alternative: MongoDB connection string
# DATABASE_URL="mongodb://username:password@localhost:27017/conference_db"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP settings for sending confirmation emails
SMTP_HOST="smtp.your-email-provider.com"
SMTP_PORT="587"
SMTP_USER="your-email@your-domain.com"
SMTP_PASSWORD="your-email-password"
SMTP_FROM="noreply@your-domain.com"

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate a random string for JWT signing
JWT_SECRET="your-super-secret-jwt-key-here"

# Session secret for secure sessions
SESSION_SECRET="your-session-secret-here"

# =============================================================================
# CONFERENCE SETTINGS
# =============================================================================
# Default conference configuration
NEXT_PUBLIC_CONFERENCE_NAME="Your Conference 2025"
NEXT_PUBLIC_CONFERENCE_DATE="2025-06-15"
NEXT_PUBLIC_CONFERENCE_LOCATION="Your City, Country"

# Registration settings
NEXT_PUBLIC_EARLY_BIRD_DEADLINE="2025-04-15"
NEXT_PUBLIC_REGULAR_DEADLINE="2025-05-30"

# Pricing (in USD)
NEXT_PUBLIC_EARLY_BIRD_PRICE="299"
NEXT_PUBLIC_REGULAR_PRICE="399"
NEXT_PUBLIC_STUDENT_DISCOUNT="50"

# =============================================================================
# OPTIONAL: THIRD-PARTY INTEGRATIONS
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID="G-XXXXXXXXXX"

# Google Maps (for venue location)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to 'development' for local development
NODE_ENV="production"

# Enable debug logging (true/false)
DEBUG_MODE="false"

# =============================================================================
# WEBHOOK ENDPOINTS
# =============================================================================
# PayPal webhook endpoint (auto-configured)
PAYPAL_WEBHOOK_URL="${NEXT_PUBLIC_APP_URL}/api/paypal/webhook"

# =============================================================================
# NOTES:
# =============================================================================
# 1. Replace ALL placeholder values with your actual credentials
# 2. For PayPal production, use live credentials from PayPal Developer Dashboard
# 3. Ensure your database is properly configured and accessible
# 4. Test email configuration before going live
# 5. Keep this file secure and never commit it to version control
# =============================================================================
